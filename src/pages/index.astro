---
import Layout from "../components/Layout.astro";

const drops = [
  {
    name: "Drop 07 — Liminal Lines",
    description:
      "Modular coats, liquid satin cargos, and keffiyeh knit shells engineered for warm nights on the Corniche.",
    status: "Available now",
    accent: "from-emerald-500/40 via-teal-400/30 to-cyan-400/40",
    cta: "Shop the drop",
  },
  {
    name: "Drop 08 — Orbit Drift",
    description:
      "Weightless mesh layers embedded with reflective ink that blooms under stage light and city glow.",
    status: "Launching 18 Oct",
    accent: "from-purple-500/40 via-fuchsia-400/30 to-rose-400/40",
    cta: "Join the waitlist",
  },
  {
    name: "Drop 09 — Desert Bloom",
    description:
      "Plant-dyed capes and modular utility vests crafted with reclaimed desert canvas and raw silk.",
    status: "Preview at Fashion Futures",
    accent: "from-amber-500/40 via-orange-400/30 to-pink-400/40",
    cta: "Book showroom",
  },
];

const stats = [
  { label: "Sell-out rate", value: "92%", detail: "within 72 hours of launch" },
  { label: "Creative partners", value: "38", detail: "global stylists & directors" },
  { label: "Impact", value: "12.4t", detail: "CO₂ offset per season" },
];

const campaigns = [
  {
    title: "أصوات الشمس — Voices of the Sun",
    location: "Wadi Rum, Jordan",
    copy: "A motion-led editorial where keffiyeh grids melt into holographic dunes, directed by Farah N. and scored by Shkoon.",
  },
  {
    title: "Surface Tension",
    location: "Jeddah Waterfront, KSA",
    copy: "A floating runway on mirrored water, captured in realtime volumetric video to anchor our AR retail experience.",
  },
  {
    title: "Skyline Pulse",
    location: "Doha, Qatar",
    copy: "A night drop projected across skyscrapers with kinetic typography stitched from our new Orbital type suite.",
  },
];

const journalEntries = [
  {
    title: "How we weave keffiyeh memory into adaptive outerwear",
    date: "September 2025",
    category: "Design Lab",
  },
  {
    title: "Building climate-responsive dye labs across MENA",
    date: "August 2025",
    category: "Impact",
  },
  {
    title: "Five directors shaping PalStyle motion narratives",
    date: "July 2025",
    category: "Culture",
  },
];

const experiences = [
  {
    title: "Motion-crafted product stories",
    description:
      "Immersive micro-films stitched with volumetric captures translate fabric behavior into interactive product pages.",
  },
  {
    title: "AI-personalized fittings",
    description:
      "Upload your silhouette to render garment flow in realtime with our physics-trained drape engine.",
  },
  {
    title: "Planet-positive logistics",
    description:
      "Hybrid fulfillment across Dubai, Amman, and Berlin keeps drops fast while offsetting every shipment.",
  },
];
---

<Layout title="PalStyle Studio — Fashion engineered for motion" description="Discover PalStyle Studio, the MENA-born label infusing keffiyeh heritage with kinetic storytelling, immersive commerce, and sustainable couture drops.">
  <section id="hero" class="relative mt-4 overflow-hidden rounded-[3rem] border border-white/10 bg-white/5 px-8 py-16 sm:px-12 lg:px-20">
    <div class="pointer-events-none absolute inset-0 -z-10 bg-gradient-to-br from-emerald-500/10 via-teal-400/5 to-cyan-400/10"></div>
    <div class="absolute -left-12 top-12 hidden h-48 w-48 rounded-full bg-gradient-to-br from-emerald-400/20 to-cyan-400/5 blur-3xl sm:block"></div>
    <div class="absolute -bottom-10 right-10 hidden h-64 w-64 rounded-full bg-gradient-to-br from-emerald-500/20 via-teal-500/10 to-transparent blur-3xl lg:block"></div>
    <div class="grid gap-12 lg:grid-cols-[1.15fr,0.85fr] lg:items-center">
      <div class="space-y-8">
        <p class="text-xs uppercase tracking-[0.5em] text-emerald-300">Heritage in motion</p>
        <h1 class="text-4xl font-semibold leading-tight text-white sm:text-5xl lg:text-6xl">
          PalStyle Studio يعيد صياغة الزي العربي بحس مستقبلي وجماليات Web10.
        </h1>
        <p class="max-w-xl text-base text-neutral-200/90 sm:text-lg">
          From Ramallah rooftops to Dubai runways, we craft limited drops that move like cinema: kinetic visuals, tactile fabrics, and immersive commerce built for global demand.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="#collections"
            class="inline-flex items-center gap-3 rounded-full bg-gradient-to-r from-emerald-500 via-teal-400 to-cyan-400 px-6 py-3 text-sm font-semibold uppercase tracking-[0.35em] text-neutral-950 shadow-lg shadow-emerald-500/30 transition hover:brightness-110"
          >
            Explore Collections
            <span aria-hidden="true">↗</span>
          </a>
          <a
            href="#campaigns"
            class="inline-flex items-center gap-3 rounded-full border border-white/20 px-6 py-3 text-sm font-semibold uppercase tracking-[0.35em] text-neutral-100 transition hover:border-emerald-300 hover:text-emerald-200"
          >
            Watch Campaigns
          </a>
        </div>
        <div class="flex flex-wrap gap-8 text-xs uppercase tracking-[0.4em] text-neutral-400">
          {stats.map((stat) => (
            <div class="space-y-1">
              <p class="text-2xl font-semibold text-white">{stat.value}</p>
              <p>{stat.label}</p>
              <p class="text-[11px] uppercase tracking-[0.5em] text-neutral-500">{stat.detail}</p>
            </div>
          ))}
        </div>
      </div>
      <div class="relative isolate flex justify-center lg:justify-end">
        <div class="glass-panel relative w-full max-w-sm overflow-hidden px-6 pb-8 pt-10">
          <div class="absolute inset-x-10 top-6 h-6 rounded-full bg-gradient-to-r from-emerald-400/60 to-cyan-400/60 blur-xl"></div>
          <div class="relative space-y-6">
            <div class="h-64 w-full rounded-2xl bg-gradient-to-br from-neutral-900 via-neutral-800 to-neutral-900 bg-grid p-[1px]">
              <div class="relative h-full w-full overflow-hidden rounded-[1.7rem] bg-neutral-950/70">
                <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(16,185,129,0.2),_transparent_50%)]"></div>
                <div class="absolute -top-10 left-1/2 h-56 w-56 -translate-x-1/2 rounded-full border border-emerald-400/40"></div>
                <div class="absolute top-10 left-1/2 h-4 w-4 -translate-x-1/2 rounded-full bg-emerald-300 shadow-lg shadow-emerald-500/40 animate-orbit"></div>
                <div class="absolute inset-x-10 bottom-10 h-40 rounded-[2rem] border border-white/10 bg-gradient-to-br from-emerald-400/20 via-transparent to-neutral-900/70 backdrop-blur-lg"></div>
              </div>
            </div>
            <div class="space-y-2 text-xs uppercase tracking-[0.35em] text-neutral-400">
              <p class="text-neutral-200">Realtime lookbook preview</p>
              <p>Swipe to feel the motion</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="collections" class="mt-20 space-y-10">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-emerald-300">Limited drops</p>
        <h2 class="mt-2 text-3xl font-semibold text-white sm:text-4xl">Tailored for speed, designed for story.</h2>
      </div>
      <a href="#shop" class="text-xs uppercase tracking-[0.4em] text-neutral-400 hover:text-emerald-200">See availability ↗</a>
    </div>
    <div class="grid gap-6 lg:grid-cols-3">
      {drops.map((drop) => (
        <article class="relative overflow-hidden rounded-[2.2rem] border border-white/10 bg-white/5 p-8 transition hover:border-emerald-300/60">
          <div class={`absolute inset-0 -z-10 bg-gradient-to-br ${drop.accent} opacity-70 animate-gradient`}></div>
          <div class="flex h-full flex-col justify-between gap-8">
            <div class="space-y-5">
              <p class="text-xs uppercase tracking-[0.4em] text-neutral-200/80">{drop.status}</p>
              <h3 class="text-2xl font-semibold text-white">{drop.name}</h3>
              <p class="text-sm leading-relaxed text-neutral-200/90">{drop.description}</p>
            </div>
            <a href="#shop" class="inline-flex items-center gap-3 text-xs font-semibold uppercase tracking-[0.4em] text-neutral-100">
              {drop.cta}
              <span aria-hidden="true">↗</span>
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section id="campaigns" class="mt-24 grid gap-10 lg:grid-cols-[1.1fr,0.9fr] lg:items-center">
    <div class="space-y-6">
      <p class="text-xs uppercase tracking-[0.4em] text-emerald-300">Motion campaigns</p>
      <h2 class="text-3xl font-semibold text-white sm:text-4xl">Immersive stories engineered to convert.</h2>
      <p class="text-base text-neutral-200/90">
        We craft cinematic experiences with realtime engines, volumetric capture, and interactive typography. Each campaign feeds into a commerce funnel that feels like a live performance.
      </p>
      <div class="grid gap-6">
        {campaigns.map((campaign) => (
          <article class="rounded-3xl border border-white/10 bg-white/5 p-6 transition hover:border-emerald-300/50">
            <div class="flex items-center justify-between text-xs uppercase tracking-[0.4em] text-neutral-400">
              <span>{campaign.location}</span>
              <span class="text-emerald-300">Live</span>
            </div>
            <h3 class="mt-4 text-xl font-semibold text-white">{campaign.title}</h3>
            <p class="mt-3 text-sm leading-relaxed text-neutral-200/90">{campaign.copy}</p>
          </article>
        ))}
      </div>
    </div>
    <div class="glass-panel relative overflow-hidden p-8">
      <div class="pointer-events-none absolute inset-0 -z-10 bg-gradient-to-br from-emerald-500/20 via-teal-500/10 to-transparent"></div>
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.4em] text-neutral-200">Realtime commerce stack</p>
        <h3 class="text-2xl font-semibold text-white">Web10 retail, ready to launch.</h3>
        <ul class="space-y-4 text-sm text-neutral-200/90">
          {experiences.map((experience) => (
            <li class="rounded-2xl border border-white/10 bg-neutral-950/60 p-4">
              <p class="text-sm font-semibold uppercase tracking-[0.35em] text-emerald-300">{experience.title}</p>
              <p class="mt-2 text-sm text-neutral-200/90">{experience.description}</p>
            </li>
          ))}
        </ul>
        <a
          href="mailto:hello@palstyle.co"
          class="inline-flex items-center gap-3 rounded-full bg-white/90 px-6 py-3 text-xs font-semibold uppercase tracking-[0.35em] text-neutral-900 transition hover:bg-white"
        >
          Build your launch
          <span aria-hidden="true">↗</span>
        </a>
      </div>
    </div>
  </section>

  <section id="lookbook" class="mt-24 space-y-10">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-emerald-300">Lookbook</p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">Swipe the vibe before it ships.</h2>
      </div>
      <a href="#shop" class="text-xs uppercase tracking-[0.4em] text-neutral-400 hover:text-emerald-200">Book private viewing ↗</a>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      <div class="glass-panel relative overflow-hidden p-6">
        <div class="absolute inset-0 -z-10 bg-gradient-to-br from-cyan-400/20 to-transparent"></div>
        <h3 class="text-sm font-semibold uppercase tracking-[0.35em] text-neutral-200">SS25: Skyline Pulse</h3>
        <p class="mt-3 text-sm text-neutral-300/90">
          Drone-tracked silhouettes with holographic overlays showcase the collection in a cinematic vertical stream.
        </p>
      </div>
      <div class="glass-panel relative overflow-hidden p-6">
        <div class="absolute inset-0 -z-10 bg-gradient-to-br from-fuchsia-400/20 to-transparent"></div>
        <h3 class="text-sm font-semibold uppercase tracking-[0.35em] text-neutral-200">Motion archive</h3>
        <p class="mt-3 text-sm text-neutral-300/90">
          Browse 4K volumetric captures, AR-ready textures, and behind-the-scenes choreography breakdowns.
        </p>
      </div>
      <div class="glass-panel relative overflow-hidden p-6">
        <div class="absolute inset-0 -z-10 bg-gradient-to-br from-emerald-400/20 to-transparent"></div>
        <h3 class="text-sm font-semibold uppercase tracking-[0.35em] text-neutral-200">Virtual fittings</h3>
        <p class="mt-3 text-sm text-neutral-300/90">
          Generate a personal avatar, test drape physics, and reserve preferred colorways before public release.
        </p>
      </div>
    </div>
  </section>

  <section id="journal" class="mt-24 space-y-10">
    <div class="flex flex-col gap-4 sm:flex-row sm:items-end sm:justify-between">
      <div>
        <p class="text-xs uppercase tracking-[0.4em] text-emerald-300">Journal</p>
        <h2 class="text-3xl font-semibold text-white sm:text-4xl">Stories from the studio.</h2>
      </div>
      <a href="#" class="text-xs uppercase tracking-[0.4em] text-neutral-400 hover:text-emerald-200">View all entries ↗</a>
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {journalEntries.map((entry) => (
        <article class="glass-panel relative overflow-hidden p-6">
          <div class="absolute inset-0 -z-10 bg-gradient-to-br from-white/5 to-transparent"></div>
          <p class="text-xs uppercase tracking-[0.4em] text-neutral-400">{entry.category}</p>
          <h3 class="mt-4 text-xl font-semibold text-white">{entry.title}</h3>
          <p class="mt-3 text-xs uppercase tracking-[0.35em] text-neutral-500">{entry.date}</p>
        </article>
      ))}
    </div>
  </section>

  <section id="shop" class="mt-28 overflow-hidden rounded-[3rem] border border-white/10 bg-gradient-to-br from-emerald-500/10 via-teal-400/10 to-cyan-400/10 px-10 py-16">
    <div class="grid gap-12 lg:grid-cols-[1.2fr,0.8fr] lg:items-center">
      <div class="space-y-6">
        <p class="text-xs uppercase tracking-[0.4em] text-neutral-200">Ready to launch</p>
        <h2 class="text-4xl font-semibold text-white">Book your PalStyle digital flagship.</h2>
        <p class="text-base text-neutral-200/90">
          We design, build, and optimize immersive commerce ecosystems for fashion houses across MENA and beyond. Let’s craft your next kinetic storefront with live drop dashboards, global payments, and loyalty built for superfans.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="mailto:hello@palstyle.co"
            class="inline-flex items-center gap-3 rounded-full bg-white px-6 py-3 text-sm font-semibold uppercase tracking-[0.35em] text-neutral-950 transition hover:bg-neutral-100"
          >
            Schedule a demo
            <span aria-hidden="true">↗</span>
          </a>
          <a
            href="#journal"
            class="inline-flex items-center gap-3 rounded-full border border-white/30 px-6 py-3 text-sm font-semibold uppercase tracking-[0.35em] text-neutral-50 transition hover:border-emerald-300 hover:text-emerald-200"
          >
            Download deck
          </a>
        </div>
      </div>
      <div class="glass-panel relative overflow-hidden p-8">
        <div class="absolute inset-0 -z-10 bg-gradient-to-tr from-emerald-400/20 to-transparent"></div>
        <h3 class="text-xs font-semibold uppercase tracking-[0.35em] text-neutral-200">Launch metrics</h3>
        <div class="mt-6 grid gap-6 text-sm text-neutral-200/90">
          <div class="rounded-2xl border border-white/10 bg-neutral-950/60 p-4">
            <p class="text-xs uppercase tracking-[0.4em] text-neutral-500">Average order value</p>
            <p class="mt-2 text-2xl font-semibold text-white">$284</p>
            <p class="text-xs uppercase tracking-[0.35em] text-emerald-300">+26% vs. industry</p>
          </div>
          <div class="rounded-2xl border border-white/10 bg-neutral-950/60 p-4">
            <p class="text-xs uppercase tracking-[0.4em] text-neutral-500">Video-to-cart conversion</p>
            <p class="mt-2 text-2xl font-semibold text-white">38%</p>
            <p class="text-xs uppercase tracking-[0.35em] text-emerald-300">Powered by motion commerce</p>
          </div>
          <div class="rounded-2xl border border-white/10 bg-neutral-950/60 p-4">
            <p class="text-xs uppercase tracking-[0.4em] text-neutral-500">Returning clientele</p>
            <p class="mt-2 text-2xl font-semibold text-white">71%</p>
            <p class="text-xs uppercase tracking-[0.35em] text-emerald-300">Community-first programs</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
